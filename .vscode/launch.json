    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Ad Hoc Test",
            "program": "${workspaceFolder}/adhoc-test.js",
            "args": ["/monkey:yes", "/bagonias:yellow", "/burp derp"]
        },
        {
            "name": "Debug Electron",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
              "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "args" : [".", "/dev"],
            "outputCapture": "std"
          }
    ]
}